extends layout
block content
    .row.banner
        .col-12
            #studentPrimaryInfo
              h1 Shane Collins
              #studentEmail
                h2 shane@anemail.com
              .belt-stack
                span.badge.badge-pill.badge-last-belt-white White
                span.badge.badge-pill.badge-warning Blue
    .row
        .col-12.col-lg-9
            .row
                .col-12.col-md-6
                    .card.card-primary
                        .card-block
                            h2.card-title Classes
                            p.classes.current Python
                            p.classes JavaScript
                            p.classes Web Development
            .row
                .col-12
                    .card.card-primary.review-card
                        .card-block
                            a.btn.btn-primary.float-right(href='/location/review/new') Add review
                            h2.card-title Customer reviews
                            .row.review
                                .col-12.no-gutters.review-header
                                    span.rating
                                        i.fa.fa-star
                                        i.fa.fa-star
                                        i.fa.fa-star
